#!/bin/sh
set -e

# bin/test: Test script for CI

bundle exec rubocop
(cd client && yarn test)

if [ -z "$TRAVIS" ]; then
  bin/rails db:environment:set RAILS_ENV=test
  echo "==> Creating test database..."
  bundle exec rake db:test:load
  echo "==> Done creating test database"
fi

export RAILS_ENV=test
bin/rspec
